<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_style"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:text="@string/switch_to_video_to_mp3"
        android:textColor="#616BEF"
        android:textSize="@dimen/d20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/the_current_project_will_be_lost_are_you_sure_you_want_to_switch"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d2dp"
        android:layout_marginTop="@dimen/d20dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#7A7A7A" />

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#EEEEEE" />

        <Button
            android:id="@+id/buttonSwitch"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="@string/switches"
            android:textColor="#616BEF" />
    </LinearLayout>
</LinearLayout>