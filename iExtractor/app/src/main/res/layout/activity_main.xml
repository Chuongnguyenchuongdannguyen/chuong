<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d71dp"
        android:layout_marginBottom="@dimen/d8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/d41dp"
            android:layout_height="@dimen/d34dp"
            android:layout_marginLeft="@dimen/d27dp"
            android:layout_marginTop="@dimen/d8dp"
            android:layout_marginBottom="@dimen/d8dp"
            android:src="@drawable/ic_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d8dp"
            android:layout_marginTop="@dimen/d8dp"
            android:layout_marginEnd="@dimen/d8dp"
            android:layout_marginBottom="@dimen/d8dp"
            android:text="MAIN SCREEN"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/d20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/d71dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/video_to_jpg_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d190dp"
                android:layout_marginLeft="@dimen/d20dp"
                android:layout_marginTop="@dimen/d20dp"
                android:layout_marginRight="@dimen/d20dp"
                android:background="@drawable/ic_layout_main_screen">

                <ImageView
                    android:layout_width="@dimen/d51dp"
                    android:layout_height="@dimen/d51dp"
                    android:layout_marginLeft="@dimen/d20dp"
                    android:layout_marginTop="@dimen/d30dp"
                    android:src="@drawable/icphoto" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20dp"
                    android:layout_marginTop="@dimen/d103dp"
                    android:text="Video to JPG"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/d20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20dp"
                    android:layout_marginTop="@dimen/d140dp"
                    android:text="Convert your video to photos"
                    android:textColor="#949494"
                    android:textSize="@dimen/d18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d190dp"
                android:layout_marginLeft="@dimen/d20dp"
                android:layout_marginTop="@dimen/d20dp"
                android:layout_marginRight="@dimen/d20dp"
                android:background="@drawable/ic_layout_main_screen">

                <ImageView
                    android:layout_width="@dimen/d51dp"
                    android:layout_height="@dimen/d51dp"
                    android:layout_marginLeft="@dimen/d20dp"
                    android:layout_marginTop="@dimen/d30dp"
                    android:src="@drawable/icgif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20dp"
                    android:layout_marginTop="@dimen/d103dp"
                    android:text="Video to GIF"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/d20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20dp"
                    android:layout_marginTop="@dimen/d140dp"
                    android:text="Convert your video to GIF"
                    android:textColor="#949494"
                    android:textSize="@dimen/d18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d190dp"
                android:layout_marginLeft="@dimen/d20dp"
                android:layout_marginTop="@dimen/d20dp"
                android:layout_marginRight="@dimen/d20dp"
                android:background="@drawable/ic_layout_main_screen">

                <ImageView
                    android:layout_width="@dimen/d51dp"
                    android:layout_height="@dimen/d51dp"
                    android:layout_marginLeft="@dimen/d20dp"
                    android:layout_marginTop="@dimen/d30dp"
                    android:src="@drawable/icmp3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20dp"
                    android:layout_marginTop="@dimen/d103dp"
                    android:text="Video to MP3"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/d20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20dp"
                    android:layout_marginTop="@dimen/d140dp"
                    android:text="Convert your video to MP3"
                    android:textColor="#949494"
                    android:textSize="@dimen/d18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d190dp"
                android:layout_marginLeft="@dimen/d20dp"
                android:layout_marginTop="@dimen/d20dp"
                android:layout_marginRight="@dimen/d20dp"
                android:layout_marginBottom="@dimen/d20dp"
                android:background="@drawable/ic_layout_main_screen">

                <ImageView
                    android:layout_width="@dimen/d51dp"
                    android:layout_height="@dimen/d51dp"
                    android:layout_marginLeft="@dimen/d25dp"
                    android:layout_marginTop="@dimen/d30dp"
                    android:src="@drawable/icproducts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20dp"
                    android:layout_marginTop="@dimen/d103dp"
                    android:text="More Products"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/d20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20dp"
                    android:layout_marginTop="@dimen/d140dp"
                    android:text="More products recommed for you"
                    android:textColor="#949494"
                    android:textSize="@dimen/d18sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>